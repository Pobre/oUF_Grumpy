<Ui xmlns='http://www.blizzard.com/wow/ui/'>
	<FontFamily name='TextNormal' virtual='true'>
		<Member alphabet='roman'>
			<Font font='Interface\AddOns\oUF_Grumpy\Fonts\FiraSans-Bold.ttf' height='12'>
				<Shadow>
					<Offset x='1' y='-1' />
					<Color r='0' g='0' b='0'/>
				</Shadow>
			</Font>
		</Member>
	</FontFamily>
	<FontFamily name='AuraOutline' virtual='true'>
		<Member alphabet='roman'>
			<Font font='Interface\AddOns\oUF_Grumpy\Fonts\FiraSans-Book.ttf' height='12' OUTLINE='OUTLINE'>
				<Shadow>
					<Offset x='1' y='-1' />
					<Color r='0' g='0' b='0'/>
				</Shadow>
			</Font>
		</Member>
	</FontFamily>

	<Font name='TextNormalLeft' inherits='TextNormal' justifyH='LEFT' virtual='true' />
	<Font name='TextNormalCenter' inherits='TextNormal' justifyH='CENTER' virtual='true' />
	<Font name='TextNormalRight' inherits='TextNormal' justifyH='RIGHT' virtual='true' />
	<Font name='AuraOutlineLeft' inherits='AuraOutline' justifyH='LEFT' virtual='true' />
	<Font name='AuraOutlineCenter' inherits='AuraOutline' justifyH='CENTER' virtual='true' />
	<Font name='AuraOutlineRight' inherits='AuraOutline' justifyH='RIGHT' virtual='true' />
</Ui>

